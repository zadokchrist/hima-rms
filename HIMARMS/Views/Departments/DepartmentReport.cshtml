
@{
    ViewBag.Title = "DepartmentReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-table"></i> Department Report</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="~/Dashboard/Index">Home</a></li>
            <li><i class="fa fa-table"></i>Department</li>
            <li><i class="fa fa-th-list"></i>Department Report</li>
        </ol>
    </div>
</div>
<div class="row">
    <div id="message"></div>
</div>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Registered Departments
            </header>

            <table class="table table-striped table-advance table-hover">
                <tbody>
                    <tr>
                        <th><i class="icon_profile"></i> Department Id</th>
                        <th><i class="icon_calendar"></i> Department Name</th>
                        <th><i class="icon_mail_alt"></i> Status</th>
                        <th><i class="icon_pin_alt"></i> Record Date</th>
                        <th><i class="icon_cogs"></i> Action</th>
                    </tr>
                    @if (ViewBag.UserDepartments!=null)
                    {
                        foreach (var department in ViewBag.UserDepartments)
                        {
                            <tr>
                                <td>@department.RecordId</td>
                                <td>@department.departmentname</td>
                                <td>
                                    @if (department.Active)
                                    {
                                        <label class="label-success">Active</label>
                                    }
                                    else
                                    {
                                        <label class="label-danger">Deactivated</label>
                                    }
                                </td>
                                <td>@department.RecordDate</td>
                                <td>
                                    <div class="btn-group">
                                        <a class="btn btn-primary" href="#"><i class="icon_plus_alt2"></i></a>
                                        <a class="btn btn-success" href="#"><i class="icon_check_alt2"></i></a>
                                        <a class="btn btn-danger" href="#"><i class="icon_close_alt2"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </section>
    </div>
</div>
@if (ViewBag.Error != null)
{
    <script type="text/javascript">
        window.onload = function () {
            var container = $("#message");
            container.html("@ViewBag.Error");
            container.attr("style", "color: red;text-align: center;;"); //add a style attribute
            };
    </script>
}
@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            var container = $("#message");
            container.html("@ViewBag.Message");
            container.attr("style", "color: green;text-align: center;;"); //add a style attribute
            };
    </script>
}
